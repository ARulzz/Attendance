<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_s3_cs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aaryarshankar.attendance.S3CS">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Mark the absentees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dispInstruction"
            android:textSize="20sp"
            android:textColor="#000000" />

        <TextView
            android:text="Roll Numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dispRollList"
            android:textSize="20sp"
            android:textColor="#000000" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:text="Roll No 1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r1"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <RadioButton
                    android:text="Roll No 2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r2"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <RadioButton
                    android:text="Roll No 3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r3"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <RadioButton
                    android:text="Roll No 4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r4"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <RadioButton
                    android:text="Roll No 5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r5"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <RadioButton
                    android:text="Roll No 6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r6"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <RadioButton
                    android:text="Roll No 7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r7"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <RadioButton
                    android:text="Roll No 8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r8"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <RadioButton
                    android:text="Roll No 9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r9"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <RadioButton
                    android:text="Roll No 10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r10"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <RadioButton
                    android:text="Roll No 11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r11"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <RadioButton
                    android:text="Roll No 12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r12"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <RadioButton
                    android:text="Roll No 13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r13"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <RadioButton
                    android:text="Roll No 14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r14"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <RadioButton
                    android:text="Roll No 15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r15"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <Button android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Left"/>

                    <Button android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Right"/>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
